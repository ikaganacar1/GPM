[Unit]
Description=GPM Web API Server
Documentation=https://github.com/ikaganacar1/GPM
After=network.target gpm.service
Wants=gpm.service

[Service]
Type=simple
ExecStart=/usr/bin/gpm-server
Restart=on-failure
RestartSec=5s

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/gpm /etc/gpm

[Install]
WantedBy=multi-user.target
